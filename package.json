{
  "name": "afordibot",
  "license": "GPL-3.0-or-later",
  "packageManager": "pnpm@8.6.6",
  "private": true,
  "scripts": {
    "build": "pnpm rome:run && pnpm --recursive build",
    "test": "pnpm rome:run && pnpm --recursive test",
    "rome": "rome",
    "rome:run": "pnpm rome:format && pnpm rome:lint",
    "rome:format": "rome format --write .",
    "rome:format:check": "rome format .",
    "rome:lint": "rome check . --apply",
    "rome:lint:check": "rome check ."
  },
  "devDependencies": {
    "@types/node": "20.4.1",
    "pnpm": "8.6.6",
    "rome": "12.1.3",
    "typescript": "5.1.6",
    "vitest": "0.33.0"
  }
}
