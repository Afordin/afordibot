{
  "extends": ["../../tsconfig.base.json"],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "src/*": ["*"],
      "application": ["/application/*, /application"],
      "domain": ["/domain/*", "/domain"],
      "infrastructure": ["/infrastructure/*", "/infrastructure"],
      "types": ["/types/*", "/types"]
    },
    "outDir": "./dist"
  },
  "exclude": [
    "./node_modules/**/*",
    "./src/tests/**/*",
    "./dist/**/*"
  ]
}
