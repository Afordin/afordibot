    "awilix": "8.0.1",
    "cron": "2.3.1",
    "cross-env": "7.0.3",
    "dayjs": "1.11.9",
    "dotenv": "16.3.1",
    "module-alias": "2.2.3",
    "tmi.js": "1.8.5"
  },
  "devDependencies": {
    "@types/cron": "2.0.1",
    "@types/luxon": "3.3.0",
    "@types/module-alias": "2.0.1",
    "@types/tmi.js": "1.8.3"
  }
}
